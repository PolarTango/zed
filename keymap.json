// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {}
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space c r": "editor::FindAllReferences",
      "space space": "file_finder::Toggle",
      "space f g": "pane::DeploySearch",
      "space f f": "file_finder::Toggle",
      "space k": "zed::OpenDefaultKeymap",
      "space c a": "editor::ToggleCodeActions",
      "shift-q": "pane::CloseActiveItem",
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "shift-j": "vim::EndOfParagraph",
      "shift-k": "vim::StartOfParagraph"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space e o": "project_panel::ToggleFocus",
      "space d l": "workspace::ToggleLeftDock",
      "space d b": "workspace::ToggleBottomDock",
      "space o c": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "menu",
    "bindings": {
      "k": "editor::ContextMenuPrevious",
      "j": "editor::ContextMenuNext"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "j": "editor::ContextMenuNext",
      "k": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "enter": "editor::Newline",
      "tab": "menu::Confirm"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "escape": "workspace::ToggleBottomDock"
    }
  }
]
