[

  {
    "context": "Workspace || Editor",
    "bindings": {
      "ctrl-w": "workspace::CloseWindow"
    }
  },

  {
    "context": "(Editor && vim_mode == normal) || ChangesList || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView || Welcome",
    "bindings": {
      "space space": "file_finder::Toggle"
    }
  },

  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "shift-q": "pane::CloseActiveItem",
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "shift-j": "vim::EndOfParagraph",
      "shift-k": "vim::StartOfParagraph",
      "space c R": "editor::FindAllReferences",
      "space c r": "editor::Rename",
      "space c a": "editor::ToggleCodeActions",
      "space f g": "pane::DeploySearch",
      "space k": "editor::Hover",
      "space o e": "project_panel::ToggleFocus",
      "space o c": "terminal_panel::ToggleFocus",
      "space d l": "workspace::ToggleLeftDock",
      "space d b": "workspace::ToggleBottomDock"
    }
  },

  {
    "context": "menu",
    "bindings": {
      "ctrl-k": "editor::ContextMenuPrevious",
      "ctrl-j": "editor::ContextMenuNext"
    }
  },

  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-j": "editor::ContextMenuNext",
      "ctrl-k": "editor::ContextMenuPrevious"
    }
  },

  {
    "context": "Editor && showing_completions",
    "bindings": {
      "enter": "editor::Newline",
      "tab": "menu::Confirm"
    }
  },

  {
    "context": "ProjectPanel",
    "bindings": {
      "escape": "workspace::ToggleLeftDock"
    }
  },

  {
    "context": "Terminal",
    "bindings": {
      "escape": "workspace::ToggleBottomDock",
      "ctrl-n": "workspace::NewTerminal",
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem"
    }
  }

]
