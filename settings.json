{
  "project_panel": {
    "hide_gitignore": true
  },
  "file_scan_exclusions": ["obj", "bin"],
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "vim_mode": true,
  "ui_font_size": 22,
  "buffer_font_size": 18,
  "relative_line_numbers": true,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Ayu Dark"
  }
}
